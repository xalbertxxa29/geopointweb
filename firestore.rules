rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ── Helper functions ──────────────────────────────────────────────────
    function isAuthenticated() {
      return request.auth != null;
    }

    function callerUsername() {
      // Normalizamos a minúsculas para evitar errores de permisos por casing
      return request.auth.token.email.split('@')[0].lower();
    }

    function isAdmin() {
      return isAuthenticated() &&
        get(/databases/$(database)/documents/usuarios/$(callerUsername())).data.tipo.lower()
          in ['admin', 'administrador'];
    }

    // ── tareas (incident reports) ─────────────────────────────────────────
    // Fusionando: Lectura/Creación para autenticados, Modificación para admin
    match /tareas/{tareaId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update, delete: if isAdmin();

      // Sub-colecciones (actividades, fotos, etc.)
      match /{subCol}/{docId} {
        allow read, write: if isAuthenticated();
      }
    }

    // ── usuarios ──────────────────────────────────────────────────────────
    // Los usuarios ven su propio perfil, admins ven/modifican todo
    match /usuarios/{userId} {
      allow read: if isAuthenticated() && (callerUsername() == userId || isAdmin());
      allow write: if isAdmin();
    }

    // ── CLIENTES (unit catalog) ───────────────────────────────────────────
    // Respetando el PRIMER SET: Mantener acceso abierto para no romper el flujo actual
    match /CLIENTES/{clienteId} {
      allow read, write: if true;
      match /UNIDADES/{unidadId} {
        allow read, write: if true;
      }
    }

    // ── logs (auditoría) ────────────────────────────────────────────────
    // Cualquier usuario logueado crea logs, solo admin los lee
    match /logs/{logId} {
      allow create: if isAuthenticated();
      allow read: if isAdmin();
    }

    // ── Default ──
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
