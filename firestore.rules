rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ── Helper functions ──────────────────────────────────────────────────
    function isAuthenticated() {
      return request.auth != null;
    }

    function callerUsername() {
      return request.auth.token.email.split('@')[0];
    }

    function isAdmin() {
      return isAuthenticated() &&
        get(/databases/$(database)/documents/usuarios/$(callerUsername())).data.tipo
          in ['admin', 'Administrador', 'administrador'];
    }

    // ── tareas (incident reports) ─────────────────────────────────────────
    // Any authenticated user can read.
    // Only authenticated users can create their own records.
    // Only admins can update or delete.
    match /tareas/{tareaId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated()
                    && request.resource.data.keys().hasAll(['cliente', 'unidad', 'estado']);
      allow update, delete: if isAdmin();

      // Sub-collections (actividades, fotos, etc.)
      match /{subCol}/{docId} {
        allow read: if isAuthenticated();
        allow write: if isAuthenticated();
      }
    }

    // ── usuarios ──────────────────────────────────────────────────────────
    // Users can read their own doc. Admins can read/write all.
    match /usuarios/{userId} {
      allow read: if isAuthenticated() &&
                  (callerUsername() == userId || isAdmin());
      allow write: if isAdmin();
    }

    // ── CLIENTES (unit catalog) ───────────────────────────────────────────
    // Anyone authenticated can read clients and their units.
    // Only admins can modify.
    match /CLIENTES/{clienteId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();

      match /UNIDADES/{unidadId} {
        allow read: if isAuthenticated();
        allow write: if isAdmin();
      }
    }

    // ── Default: deny everything else ────────────────────────────────────
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
